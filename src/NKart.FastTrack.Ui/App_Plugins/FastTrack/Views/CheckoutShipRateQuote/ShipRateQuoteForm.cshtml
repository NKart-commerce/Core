@inherits Umbraco.Web.Mvc.UmbracoViewPage<NKart.FastTrack.Models.FastTrackShipRateQuoteModel>
@using System.Web.Mvc.Html
@using NKart.FastTrack.Controllers
@using NKart.FastTrack.Ui
@using NKart.Web.Models.Ui

@using Umbraco.Web
@{
    Model.SuccessRedirectUrl = ExampleUiHelper.CheckoutWorkflow.GetPageForStage(CheckoutStage.PaymentMethod).Url;
}
<h3>Shipping Rate Quote</h3>
@using (Html.BeginUmbracoForm<CheckoutShipRateQuoteController>("SaveShipRateQuote", new { area = "FastTrack" }))
{
    <div class="row">
        <div class="col-md-12 form-group">
            @Html.LabelFor(x => x.ShippingQuotes)
            @Html.DropDownListFor(x => x.ShipMethodKey, Model.ShippingQuotes, new { @class = "form-control"})
        </div>
    </div>
    @Html.HiddenFor(x => x.SuccessRedirectUrl)
    <div>
        @Html.AntiForgeryToken()
        <a href="@ExampleUiHelper.CheckoutWorkflow.GetPageForStage(CheckoutStage.ShippingAddress).Url" class="btn btn-default">Back</a>
        <input type="submit" class="btn btn-default pull-right" value="Next"/>
    </div>
}

